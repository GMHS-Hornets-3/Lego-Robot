void Drive_Forward(int distance)
{
    cmpc(0);
    while(abs(gmpc(0))<100*distance)
    {
        motor(0,96.5);
        motor(1,97.5);
        msleep(10);
    }
    ao();
}
void Drive_Backwards(int distance)
{
    cmpc(0);
    while(abs(gmpc(0))<100*distance)
    {
        motor(0,-45.5);
        motor(1,-45.5);
        msleep(10);
    }
    ao();
}
void Turn_Left (int distance)
{
    cmpc(1);
    while(abs(gmpc(1))<10*distance)
    {
        motor(0,-46.5);
        motor(1,46.5);
        msleep(10);
    }
    ao();
    msleep(200);
}
void Turn_Right (int distance)
{
    cmpc(0);
    while(abs(gmpc(0))<9.5*distance)
    {
        motor(0,46.5);
        motor(1,-46.5);
        msleep(10);
    }
    ao();
    msleep(200);
}
void Grab_Firefighter (int count)
{
    enable_servos();
    while(amount<count)
    {
        enable_servos();
        set_servo_position(0,Close);
        msleep(100);
        Drive_Backwards(7.5);
        Turn_Right(40);
        Move_Servos_Up(Down,Up);
        msleep(100);
        enable_servos();
        Turn_Right(120);
        Move_Servos_Down(Up, Down);
        msleep(100);
        enable_servos();
        set_servo_position(0,Open);
        msleep(100);
        Move_Servos_Up(Down, Up);
        msleep(100);
        Turn_Left(115);
        Move_Servos_Down(Up, Down),
        Find_Line3(100);
        msleep(100);
        Drive_Forward(6);
        amount = amount+1;
    }
    disable_servos();
    ao();
    amount = 0;
}
void Grab_Firefighter_Last(int count3)
{
    enable_servos();
    while(amount3<count3)
    {
        set_servo_position(0,Close);
        msleep(100);
        Drive_Backwards(7);
        Turn_Right(200);
        set_servo_position(0,Open);
        msleep(200);
        Move_Servos_Up(Down, Up);
        msleep(200);
        amount3 = amount3+1;
    }
    disable_servos();
    ao();
    amount3=0;
}
void Ready_Claw (int count2)
{
    enable_servos();
    while(amount2<count2)
    {
        set_servo_position(1,Down);
        msleep(400);
        set_servo_position(0,Open);
        msleep(400);
        amount2=amount2+1;
    }
    disable_servos();
    ao();
    amount2 = 0;
}
void Find_Line(int line)
{
    while(analog(1)<1900)
    {
        motor(0,96.5);
        motor(1,96.5);
        msleep(3);
    }
    ao();
}
void Grab_Water(int sleep5)
{
    enable_servos();
    set_servo_position(0,Open);
    msleep(sleep5);
    Move_Servos_Down(Up,Down);
    msleep(sleep5);
    set_servo_position(0,Close);
    msleep(sleep5);
    Move_Servos_Up(Down,Up);
    msleep(sleep5);
}
void Find_Line2(int sleep3)
{
    while(analog(1)<1500)
    {
        motor(0,96.5);
        motor(1,96.5);
        msleep(1);
        printf("Sensor Reads %d\n", analog(1));
    }
    motor(0,96.5);
    motor(1,96.5);
    msleep(sleep3);
    ao();
}
void Move_Servos_Down(int start, int finish)
{
    int position=start;
    enable_servos();
    while (position<finish)
    {
        set_servo_position(1,position+50);
        msleep(80);
        position=position+50;
    }
    ao();
    msleep(100);
}
void Find_Line3(int sleep)
{	
    while(analog(1)<1900)
    {
        motor(0,-46.5);
        motor(1,46.5);
        msleep(3);
    }
    motor(0,-46.5);
    motor(1,46.5);
    msleep(sleep);
    ao();
}
void Grab_FireTruck(int truck)
{
    enable_servos();
    while (amount5<truck)
    {
        Turn_Left(10);
        set_servo_position(0, Close);
        msleep(200);
        Turn_Right(230);
        set_servo_position(0,Open);
        msleep(200);
        Move_Servos_Up(Down,Up);
        msleep(200);
        Find_Line3(75);
        Move_Servos_Down(Up, Down);
        msleep(200);
        amount5=amount5+1;
    }
    ao();
    disable_servos();
    amount5=0;
}
void Find_Line4(int sleep2)
{
    while(analog(1)<1900)
    {
        motor(0,46.5);
        motor(1,-46.5);
        msleep(3);
    }
    motor(0,46.5);
    motor(1,-46.5);
    msleep(sleep2);
    ao();
}
void Move_Servos_Up(int start2, int finish2)
{
    int position2=start2;
    enable_servos();
    while (position2>finish2)
    {
        set_servo_position(1,position2-50);
        msleep(80);
        position2=position2-50;
    }
    ao();
    msleep(100);
}
void Turn_Left_Kind_Of(int degrees)
{
    cmpc(1);
    while(gmpc(1)<degrees*22)
    {
        motor(0,0);
        motor(1,100);
        msleep(10);
    }
    ao();
}
void Grab_Citizens (int amount7)
{
    while(amount7>count7)
    {
        enable_servos();
        set_servo_position(0,Little_Open);
        msleep(100);
        Drive_Forward(6);
        msleep(100);
        set_servo_position(0,Close);
        msleep(100);
        Drive_Backwards(12);
        count7=count7+1;
    }
    disable_servos();
    ao();
    count7=0;
}




















