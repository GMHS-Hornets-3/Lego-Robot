    set_servo_position(0,Open);
    Turn_Right(120);
    Move_Servos_Down(Up, Down);
    Drive_Forward(2);
    msleep(100);
    set_servo_position(0,Little_Close);
    msleep(100);
    Move_Servos_Up(Down, Up);
    Turn_Left(15);
    Drive_Forward(13);
    set_servo_position(0,Open);
    Turn_Left(104);
    set_servo_position(0,Close);
    Move_Servos_Down(Up,Down);
    Drive_Forward(20);
    Turn_Left(40);
    Turn_Right(40);
    Move_Servos_Up(Down,Up);
    Drive_Forward(90);
    Find_Line2(0);
    Turn_Left_Kind_Of(86);
    Drive_Forward(25);
    Find_Line2(50);
    Turn_Right(98);
    Drive_Forward(13);
    Turn_Left(92);
    Move_Servos_Down(Up,Down);
    set_servo_position(0,Open);
    Drive_Forward(27);
    Grab_Citizens(1);
    Turn_Right(195);
    set_servo_position(0,Open);
    msleep(100);
    Move_Servos_Up(Down,Up);
    set_servo_position(0,Little_Open);
    msleep(100);
    Turn_Right(90);
    Drive_Forward(28);
    Turn_Right(90);
    Move_Servos_Down(Up,Down);
    Drive_Forward(5);
    Grab_Citizens(1);
    Turn_Right(195);
    set_servo_position(0,Open);
    msleep(100);
    Move_Servos_Up(Down,Up);
    set_servo_position(0,Little_Open);
    msleep(100);
